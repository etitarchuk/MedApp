<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="container">

        <section id="header">

            <div id="headerTop" class="row">
                <div class="col-lg-6">
                    <img src="~/Content/Images/logoMedAppWithText%20(Vector).svg" height="100" alt="Medical Software"/>
                </div>
                <div class="col-lg-6">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
            <div id="headerMenu" class="navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="responsive-menu" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Prictice", "Index", "Home")</li>
                            <li>@Html.ActionLink("Accounting", "Index", "Home")</li>
                            <li>@Html.ActionLink("Patient Management", "Index", "Home")</li>
                            <li>@Html.ActionLink("Settings", "Index", "Home")</li>
                            <li>@Html.ActionLink("Appointment Book", "Index", "Home")</li>
                            <li>@Html.ActionLink("Reports", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div> 
                </div>
            </div>

        </section>

        <section id="body">
            @RenderBody()
        </section>

        <section id="footer"></section>

    </div>











